@import "../../../colorui/main.wxss";
@import "../../../colorui/icon.wxss";

page {
    background: rgb(255, 123, 13);
}

.bg {
    width: 100%;
    height: 100vh;
    background: url("https://iqqia.com/wximage/zhuanxianjin_bj.png") no-repeat;
    background-size: cover;
    overflow: hidden;
}

.recommend-code {
    margin: 200rpx auto 0;
    width: 90%;
    border-radius: 20rpx;
    text-align: center;
}

.code-img {
    width: 250rpx;
    height: 250rpx;
    margin: 20px auto 10px;
}

.cu-list.menu-avatar>.cu-item>.cu-avatar {
    background-color: #fff;
    left: 0;
    width: 71px;
    height: 62px;
}

.code-tx-img {
    left: 0;
    width: 71px;
    height: 62px;
}

.recommend-code-tx {
    margin: 30rpx auto;
    width: 90%;
    border-radius: 20rpx;
}

.xize {
    width: 90%;
    border-radius: 20rpx;
    margin: 0 auto;
    padding-bottom: 10px;
}

.pg-recommend-title {
    background-image: linear-gradient(84deg, #5f2ef6 0%, #ba45dd 100%), linear-gradient(#8638eb, #8638eb);
    background-blend-mode: normal, normal;
}

.pg-recommend-title2 {
    background-image: linear-gradient(84deg, #4666f9 0%, #1dc2ff 100%), linear-gradient(#8638eb, #8638eb);
    background-blend-mode: normal, normal;
}