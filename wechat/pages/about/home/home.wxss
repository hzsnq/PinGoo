/* pages/about/home/home.wxss */
.mine-user {
    display: flex;
    /* justify-content: center; */
    overflow: hidden;
    position: relative;
    flex-direction: row;
    /* align-items: center; */
    color: #fff;
    top: 0;
    left: 0;
    width: 100%;
    height: 400rpx;
}

.mine-user .mine-bg {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
}

.mine-user .mine-cover {
    width: 125rpx;
    height: 125rpx;
    border-radius: 50%;
    z-index: 1;
    margin-left: 10%;
    margin-top: 15%;
}

.text-xl {
    z-index: 1;
    margin-left: 5%;
    margin-top: 19%;
}

.mine-list {
    width: 90%;
    margin: -120rpx auto 0;
    border-radius: 10rpx;
}

.mine-ico {
    position: relative;
}

.cu-tag.mine-badge {
    top: -10rpx;
    right: 20rpx;
}

.my-img {
    float: right;
}

.mine-name {
    height: 60rpx;
}