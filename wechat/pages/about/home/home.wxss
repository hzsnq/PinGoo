/* pages/about/home/home.wxss */
.mine-user {
    display: flex;
    /* justify-content: center; */
    overflow: hidden;
    position: relative;
    flex-direction: row;
    /* align-items: center; */
    color: #fff;
    top: 0;
    left: 0;
    width: 100%;
    height: 400rpx;
}

.mine-user .mine-bg {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
}

.mine-user .mine-cover {
    width: 125rpx;
    height: 125rpx;
    border-radius: 50%;
    z-index: 1;
    margin-left: 10%;
    margin-top: 7%;
}

.text-lg {
    z-index: 1;
    margin-left: 4%;
    margin-top: 12%;
}

.mine-list {
    width: 90%;
    margin: -120rpx auto 0;
    border-radius: 10rpx;
}

.mine-ico {
    position: relative;
}

.my-img {
    float: right;
}

.mine-name {
    height: 60rpx;
}

.shadow-lg {
    box-shadow: 0rpx 40rpx 100rpx 0rpx rgba(0, 0, 0, 0.07);
}

.mine-sjzx {
    position: absolute;
    right: 0;
    top: 24%;
    padding: 4rpx 20rpx;
    background: rgba(0, 0, 0, 0.6);
    color: #fff;
    border-top-left-radius: 50rpx;
    border-bottom-left-radius: 50rpx;
}

.pg-line {
    vertical-align: middle;
}